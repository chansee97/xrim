{
  "build": {
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "xrim",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "xrim",
        "minWidth": 1024,
        "minHeight": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
